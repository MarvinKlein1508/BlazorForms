    </ItemGroup>

    <ItemGroup>
        <Folder Include="Languages\Components\" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\BlazorForms.Domain\BlazorForms.Domain.csproj" />
      <ProjectReference Include="..\BlazorForms.Infrastructure\BlazorForms.Infrastructure.csproj" />
    </ItemGroup>

    <ItemGroup>
        <Reference Include="Microsoft.FluentUI.AspNetCore.Components">
            <HintPath>Microsoft.FluentUI.AspNetCore.Components.dll</HintPath>
        </Reference>
    </ItemGroup>

    <ItemGroup>
        <None Update="Microsoft.FluentUI.AspNetCore.Components.dll">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
    </ItemGroup>

</Project>
