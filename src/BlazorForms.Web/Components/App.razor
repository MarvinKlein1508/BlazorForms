<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="@Assets["/assets/css/app.css"]" />
    <link rel="stylesheet" href="@Assets["/assets/css/bootstrap-utilities.min.css"]" />
    <link rel="stylesheet" href="@Assets["/assets/css/bootstrap-grid.min.css"]" />
    <link rel="stylesheet" href="@Assets["/assets/css/custom.css"]" />
    <link rel="stylesheet" href="@Assets["BlazorForms.Web.styles.css"]" />
    <SectionOutlet @rendermode="PageRenderMode" SectionName="additional-css" />

    <ImportMap />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet @rendermode="PageRenderMode" />
</head>

<body>
    <script src="_content/Microsoft.FluentUI.AspNetCore.Components/js/loading-theme.js" type="text/javascript"></script>
    <loading-theme storage-name="theme"></loading-theme>

    <Routes @rendermode="PageRenderMode" />
    <script src="@Assets["/assets/js/min.ckeditor.js"]"></script>
    <script src="_framework/blazor.web.js"></script>
</body>

</html>

@code {
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    private IComponentRenderMode? PageRenderMode =>
        HttpContext.AcceptsInteractiveRouting() ? InteractiveServer : null;
}
