@inject IDialogService DialogService

<FluentButton BackgroundColor="transparent" OnClick="OpenSiteSettingsAsync" Title="Einstellungen">
    <FluentIcon CustomColor="#ffffff" Value="@(new Icons.Regular.Size20.Settings())" Color="Color.Custom" Title="Einstellungen" />
</FluentButton>

@code {
    private IDialogReference? _dialog;

    private async Task OpenSiteSettingsAsync()
    {
        
        _dialog = await DialogService.ShowPanelAsync<SiteSettingsPanel>(new DialogParameters()
            {
                ShowTitle = true,
                Title = "Einstellungen",
                Alignment = HorizontalAlignment.Right,
                PrimaryAction = "Schließen",
                SecondaryAction = null,
                ShowDismiss = true,
            });

        DialogResult result = await _dialog.Result;
    }
}