@page "/"
@using Microsoft.AspNetCore.Components.Web
@namespace FormularPortal.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="de">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no, shrink-to-fit=no" />
    <base href="~/" />
    
    <link rel="shortcut icon" href="assets/images/logo/favicon.ico" type="image/x-icon">
    
    @if (Request.Path.Value != "/")
    {
        <link rel="stylesheet" href="assets/css/main/app.css">
        <link rel="stylesheet" href="assets/css/custom.css" />
    }
    else
    {
        <link rel="stylesheet" href="assets/css/pages/form-editor.css" />
    }

    <link rel="stylesheet" href="assets/extensions/fontawesome/css/all.min.css" />
    <link rel="stylesheet" href="/assets/extensions/sweetalert2/sweetalert2.all.min.js" />
    <link rel="stylesheet" href="/assets/extensions/toastr/toastr.min.css" />

    <link href="FormularPortal.styles.css" rel="stylesheet" />


    <link href='/assets/images/logo/apple-touch.png' rel='apple-touch-icon'>
    <link href='/assets/images/logo/apple-touch-57x57.png' rel='apple-touch-icon' sizes='57x57'>
    <link href='/assets/images/logo/apple-touch-72x72.png' rel='apple-touch-icon' sizes='72x72'>
    <link href='/assets/images/logo/apple-touch-76x76.png' rel='apple-touch-icon' sizes='76x76'>
    <link href='/assets/images/logo/apple-touch-114x114.png' rel='apple-touch-icon' sizes='114x114'>
    <link href='/assets/images/logo/apple-touch-120x120.png' rel='apple-touch-icon' sizes='120x120'>
    <link href='/assets/images/logo/apple-touch-144x144.png' rel='apple-touch-icon' sizes='144x144'>
    <link href='/assets/images/logo/apple-touch-152x152.png' rel='apple-touch-icon' sizes='152x152'>
    <link href='/assets/images/logo/apple-touch-180x180.png' rel='apple-touch-icon' sizes='180x180'>

    <link href="/site.webmanifest" rel="manifest" />
    <component type="typeof(HeadOutlet)" render-mode="Server" />

</head>

<body>

    <component type="typeof(App)" render-mode="Server" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>
    <script src="assets/extensions/jquery/jquery-3.6.1.min.js"></script>
    <script src="assets/js/bootstrap.js"></script>
    <script src="assets/js/blazor-scripts.js"></script>
    <script src="assets/extensions/sweetalert2/sweetalert2.all.min.js"></script>
    <script src="assets/extensions/toastr/toastr.min.js"></script>
    <script src="_framework/blazor.server.js"></script>

    <script src="_content/CKEditor/min.ckeditor.js"></script>
    <script>
        Blazor.defaultReconnectionHandler._reconnectCallback = function (d) {
            document.location.reload();
        }
    </script>

</body>

</html>

